@model Laboratorium_ASPNET.Models.Contact

<h1>Dodaj nowy kontakt</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input class="form-control" asp-for="Phone" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Birth"></label>
        <input class="form-control" asp-for="Birth" type="date" />
        <span asp-validation-for="Birth" class="text-danger"></span>
    </div>
    <div class="form-group">
        <!-- Select dla organizacji -->
        <label asp-for="OrganizationId"></label>
        <select class="form-control" asp-for="OrganizationId" asp-items="@Model.Organizations"></select>
        <span asp-validation-for="OrganizationId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Zapisz</button>
    </div>
</form>
