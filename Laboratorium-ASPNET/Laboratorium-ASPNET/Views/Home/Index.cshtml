@model IEnumerable<Laboratorium_ASPNET.Models.Contact>

@{
    ViewBag.Title = "Contact List";
}

<h2>Contact List</h2>

<a asp-action="Create" class="btn btn-primary">Add New Contact</a>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Priority</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var contact in Model)
    {
        <tr>
            <td>@contact.Name</td>
            <td>@contact.Email</td>
            <td>@contact.Phone</td>
            <td>@contact.Priority</td>
            <td>
                <a asp-action="Details" asp-route-id="@contact.Id" class="btn btn-info">Details</a>
                <a asp-action="Edit" asp-route-id="@contact.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@contact.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>